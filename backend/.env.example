# Backend Environment Variables
# Copy this file to .env in the backend directory

# Groq API Key (Required for both models)
GROQ_API_KEY=your-groq-api-key-here

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Python Environment
PYTHON_EXECUTABLE=python3
MODEL_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Paths (relative to project root)
MEDQUAD_CSV=../data/medquad_processed.csv
DRUGS_CSV=../data/drugs_side_effects.csv
EMBEDDINGS_DIR=../embeddings
VISUALIZATIONS_DIR=../visualizations
MODELS_DIR=../models

# Model Configuration
QA_MODEL_PATH=../models/qa.py
RECOMMEND_MODEL_PATH=../models/medical_v3.py
DEFAULT_TOP_K=5
MAX_TOP_K=20

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined