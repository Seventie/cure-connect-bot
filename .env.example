# Medical AI Project Environment Variables
# Copy this file to .env and fill in your actual values

# Groq API Configuration
GROQ_API_KEY=your-groq-api-key-here

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_PORT=5173

# Backend API Configuration
BACKEND_URL=http://localhost:3001
API_BASE_URL=http://localhost:3001/api

# Python Model Configuration
PYTHON_PATH=/usr/bin/python3
MODEL_TIMEOUT=30000

# File Paths (adjust if your files are in different locations)
MEDQUAD_CSV_PATH=data/medquad_processed.csv
DRUGS_CSV_PATH=data/drugs_side_effects.csv
EMBEDDINGS_PATH=embeddings/encoded_docs.npy
FAISS_INDEX_PATH=embeddings/faiss.index
KG_PATH=visualizations/medical_kg.graphml
NER_CSV_PATH=visualizations/ner_entities.csv

# Model Parameters
QA_TOP_K=5
RECOMMEND_TOP_K=10
SIMILARITY_THRESHOLD=0.7

# Security (for production)
CORS_ORIGIN=http://localhost:5173
JWT_SECRET=your-jwt-secret-for-production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
ENABLE_LOGGING=true